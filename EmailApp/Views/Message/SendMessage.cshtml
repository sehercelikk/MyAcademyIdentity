@model SendMessageViewModel
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="col-md-9">
    <form method="post">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Mail Gönder</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="form-group">
                    <input class="form-control" asp-for="RecieverEmail" placeholder="Kime:" required>
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Konu:" asp-for="Subject" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" asp-for="Body" required style="height: 300px">
                    </textarea>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <div class="float-right">
                    <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Sil</button>
                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                </div>
                <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Discard</button>
            </div>
            <!-- /.card-footer -->
        </div>
    </form>
    <!-- /.card -->
</div>