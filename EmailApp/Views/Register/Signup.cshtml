@model RegisterViewModel
@{
    ViewData["Title"] = "Signup";
}

<h3>Kayıt Ol</h3>

<form method="post">
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="FristName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input asp-for="LastName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <input asp-for="UserName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>

    <span class="text-danger">
        @Html.ValidationSummary()
    </span>

    <button class="btn btn-outline-primary">Kayıt Ol</button>
</form>

